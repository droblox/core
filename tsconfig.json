{
  "compilerOptions": {
    // required
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "jsx": "react",
    "jsxFactory": "Roact.createElement",
    "jsxFragmentFactory": "Roact.Fragment",
    "module": "commonjs",
    "moduleResolution": "Node",
    "noLib": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "ESNext",
    "typeRoots": ["./node_modules/@rbxts"],

    // configurable
    "outDir": "./dist",
    "baseUrl": "./src",
    "declaration": true,

    // monorepo
    "rootDirs": ["./src"]
  }
}
